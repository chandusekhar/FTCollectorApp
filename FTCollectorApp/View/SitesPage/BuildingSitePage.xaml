<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:FTCollectorApp.Utils"
             x:Class="FTCollectorApp.View.SitesPage.BuildingSitePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Clicked="btnCamera" IconImageSource="cam_white.png" 
                 Order="Primary"
                 Priority="0" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1">
                <ScrollView>
                    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
                        <Label Text="Building" FontSize="Large" HorizontalOptions="Center"/>
                        <Label Text="Site Type*" HorizontalOptions="Start"/>
                        <local:BorderColorEntry IsReadOnly="True" x:Name="entrySiteType" IsEnabled="False" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter PCS tag number*" HorizontalOptions="Start"/>
                        <local:BorderColorEntry IsReadOnly="True" x:Name="entryTagNum" IsEnabled="False" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Owner or Customer" HorizontalOptions="Start"/>
                        <local:BorderColorEntry IsReadOnly="True" x:Name="ownerName"  HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter owners tag number" HorizontalOptions="Start"/>
                        <local:BorderEntry x:Name="ownerTagNumber"  HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter Property Id" HorizontalOptions="Start"/>
                        <local:BorderEntry x:Name="entryPropertyId"  HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter site name" HorizontalOptions="Start"/>
                        <local:BorderEntry x:Name="entrySiteName"  HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter Street Address" HorizontalOptions="Start"/>
                        <local:BorderEntry x:Name="entryStreetAddr"  HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter Postal Code" HorizontalOptions="Start"/>
                        <local:BorderEntry x:Name="entryPostalCode"  HorizontalOptions="FillAndExpand"/>
                        
                        <Grid Padding="0,5,10,5" RowDefinitions="*,*,*,*" ColumnDefinitions="*,*,*">
                            <Label Grid.Row="0" Grid.Column="0"  Text="Lane closure required"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="Enter the dot disctrict"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Has Power disconnect"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="0" x:Name="pickerLaneClosure"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="1" x:Name="pickerDotDisctrict"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="2" x:Name="pickerHasPowerDisconnect"/>
                            <Label Grid.Row="2" Grid.Column="0" Text="Enter electric site key"/>
                            <Label Grid.Row="2" Grid.Column="1" Text="3rd party comms"/>
                            <Label Grid.Row="2" Grid.Column="2" Text="Enter Comms provider"/>
                            <local:Dropdown Grid.Row="3" Grid.Column="0" x:Name="pickerElectSiteKey"/>
                            <local:Dropdown Grid.Row="3" Grid.Column="1" x:Name="picker3rdpComms"/>
                            <local:BorderEntry Grid.Row="3"  Grid.Column="2" x:Name="commsProvide"/>
                        </Grid>
                        
                        <Label Text="Enter UDS owner"/>
                        <local:BorderEntry x:Name="UDSOwner" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Building Classification"/>
                        <Picker ItemsSource="{Binding BuildingTypeList}" ItemDisplayBinding="{Binding TYPE_DESC}" x:Name="buildingClass" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Choose a roadway"/>
                        <Picker ItemsSource="{Binding RoadwayList}" ItemDisplayBinding="{Binding RoadwayName}"  x:Name="pRoadway" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Choose an intersection"/>
                        <Picker ItemsSource="{Binding IntersectionList}" ItemDisplayBinding="{Binding IntersectionName}" x:Name="pIntersection"  HorizontalOptions="FillAndExpand"/>                        
                        <Label Text="Direction of Travel"/>
                        <Picker  ItemsSource="{Binding TravelDirectionList}" ItemDisplayBinding="{Binding CompassDirDesc}" x:Name="pDirTravel" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Orientation"/>
                        <local:Dropdown  ItemsSource="{Binding OrientationList}" ItemDisplayBinding="{Binding OrientationDetail}"
                            x:Name="pOrientation" HorizontalOptions="FillAndExpand"/>
                        <Grid Padding="0,5,10,5" RowDefinitions="*,*" ColumnDefinitions="*,*,*">
                            <Label Grid.Row="0" Grid.Column="0"  Text="Enter Height"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="Enter Depth"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Enter Width"/>
                            <local:BorderEntry Grid.Row="1" Grid.Column="0" x:Name="entryHeight"/>
                            <local:BorderEntry Grid.Row="1" Grid.Column="1" x:Name="entryDepth"/>
                            <local:BorderEntry Grid.Row="1" Grid.Column="2" x:Name="entryWidth"/>
                        </Grid>
                        
                        <Label Text="Material"/>
                        <local:Dropdown  ItemsSource="{Binding MaterialCodeList}" ItemDisplayBinding="{Binding CodeDescription}"
                            x:Name="pMaterial" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Mounting"/>
                        <Picker ItemsSource="{Binding MountingTypeList}" ItemDisplayBinding="{Binding MountingType}" x:Name="pMounting" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Filter Type"/>
                        <local:Dropdown ItemsSource="{Binding FilterTypeList}" ItemDisplayBinding="{Binding FilterTypeDesc}"
                            x:Name="pFilterType" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Filter Size"/>
                        <local:Dropdown  ItemsSource="{Binding FilterSizeList}" ItemDisplayBinding="{Binding data}"
                            x:Name="pFilterSize" HorizontalOptions="FillAndExpand"/>
                        <Grid Padding="0,5,10,5" RowDefinitions="*,*" ColumnDefinitions="*,*">
                            <Label Grid.Row="0" Grid.Column="0"  Text="# Of Racks"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="key code"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="0" x:Name="pRackCount"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="1" x:Name="pKeyCode"/>
                        </Grid>
                        <Label Text="Enter serial number" />
                        <local:BorderEntry x:Name="entrySerial" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter manufactured" />
                        <DatePicker x:Name="dateManufactured" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Installed at" />
                        <DatePicker x:Name="dateInstalled" HorizontalOptions="FillAndExpand"/>
                        <Label Text="Enter notes and comments"/>
                        <Editor x:Name="editorNotes" Placeholder="Enter notes here" 
                                HorizontalOptions="FillAndExpand" MaxLength="250"   />

                        <Grid Padding="5,5,15,5" RowDefinitions="0.5*,0.5*,0.5*,0.5*,0.5*,0.5*" ColumnDefinitions="*,*,*">
                            <Label Grid.Row="0" Grid.Column="0" Text="Does it have a sun shield"/>
                            <Label Grid.Row="0" Grid.Column="1" Text="Has Ground Rod"/>
                            <Label Grid.Row="0" Grid.Column="2" Text="Has Key"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="0" x:Name="pHaveSunShield" Title="Select"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="1" x:Name="pHasGround" Title="Select"/>
                            <local:Dropdown Grid.Row="1" Grid.Column="2" x:Name="pHasKey" Title="Select"/>
                            <Label Grid.Row="2" Grid.Column="0" Text="Key Type" x:Name="txtType" IsVisible="false"/>
                            <local:Dropdown Grid.Row="3" Grid.ColumnSpan="3"  x:Name="pKeyType" IsVisible="false" />
                            <Label Grid.Row="4" Grid.Column="0" Text="Direction of Travel"/>
                            <Label Grid.Row="4" Grid.Column="1" Text="Is site in a clear Zone?"/>
                            <Label Grid.Row="4" Grid.Column="2" Text="Bucket Truck"/>
                            <local:Dropdown Grid.Row="5" Grid.Column="0" x:Name="pDirectionTravel" Title="Select" />
                            <local:Dropdown Grid.Row="5" Grid.Column="1" x:Name="pIsSiteClearZone" Title="Select"/>
                            <local:Dropdown Grid.Row="5" Grid.Column="2" x:Name="pBucketTruck" Title="Select"/>                            
                        </Grid>

                        <Button Text="Record Ducts" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnRecDucts" Command="{Binding ShowDuctPageCommand}"/>
                        <Button Text="Fiber" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnFiber" Clicked="btnFiber_Clicked"/>
                        <!--<Button Text="Tracer" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnTracer" Clicked="btnTracer_Clicked"/> -->
                        <Button Text="Connect Devices" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnConnectDevice" Clicked="btnConnectDevice_Clicked"/>
                        <Button Text="Complete This Trace" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnComplete" Clicked="btnComplete_Clicked"/>
                        <Button Text="Record Racks" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnRecRacks" Clicked="btnRecRacks_Clicked"/>
                        <Button Text="Active Device" IsEnabled="False" HorizontalOptions="FillAndExpand" x:Name="btnActive" Clicked="btnActive_Clicked"/>
                        <Button Text="Save and Continue" HorizontalOptions="FillAndExpand" x:Name="btnSave" Clicked="btnSave_Clicked"/>                        
                    </StackLayout>

                </ScrollView>
            </StackLayout>
            <!--<StackLayout IsVisible="{Binding IsBusy}" Padding="12"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1">

                <ActivityIndicator IsRunning="{Binding IsBusy}" Color ="{StaticResource blueColor}"/>

                <Label Text="Loading..." HorizontalOptions="Center" TextColor="White"/>

            </StackLayout>-->            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>