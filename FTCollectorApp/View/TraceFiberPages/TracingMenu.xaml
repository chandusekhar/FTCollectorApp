<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FTCollectorApp.View.TraceFiberPages.TracingMenu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Tracing" FontSize="Large" HorizontalOptions="Center"/>
            <Button x:Name="btnSelectCable" Text="Start a Trace" Clicked="btnStart_Clicked"  HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnStartTrace" Text="Resume a Trace" Clicked="btnResume_Clicked"  HorizontalOptions="FillAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>