                    <Label x:Name="txtLoading" Text="{Binding LoadingText}" HorizontalOptions="Center" TextColor="Black"/>
                </StackLayout>

                <Button Text="Login" Command="{Binding LoginCommand}" IsVisible="{Binding IsDisplayButton, Mode=TwoWay}" 
